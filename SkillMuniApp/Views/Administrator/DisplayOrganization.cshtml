@{
    ViewBag.Title = "Organization";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    //Layout = "~/Views/Shared/_cms_layout_new.cshtml";
}

<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable({
            "pageLength": 15
        });
    });

</script>


@{
    List<tbl_organization> orgntn = (List<tbl_organization>)ViewData["select-organization"];
}
<div class="content">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Display Organisation</h4>
            </div>
            <div class="panel-body">
                <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th width="20%">
                                Organisation
                            </th>
                            <th width="10%">
                                Type
                            </th>
                            <th width="10%">
                                Contact
                            </th>
                            <th width="10%"></th>
                        </tr>
                    </thead>
                    @{
                        int i = 0;
                    }
                    <tbody>
                        @foreach (tbl_organization item in orgntn)
                        {
                            <tr>
                                <td>
                                    @item.ORGANIZATION_NAME
                                </td>
                                <td>
                                    @item.tbl_business_type.BUSINESS_TYPE_NAME
                                </td>

                                <td>
                                    @item.CONTACT_NAME (@item.CONTACTNUMBER)
                                </td>
                                <td>

                                    <a href="@Url.Action("editOrganization", "Administrator", new { id = item.ID_ORGANIZATION })"><i class="glyphicon glyphicon-edit"></i></a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

