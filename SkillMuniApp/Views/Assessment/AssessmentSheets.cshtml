@{
    ViewBag.Title = "AssessmentSheets";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
}


<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });

</script>

@{
    List<tbl_assessment> assessment = (List<tbl_assessment>)ViewData["assessment"];

}
<div class="row clearfix">
    <div class="col-md-12 column">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h6 class="panel-title">Assessment Sheets</h6>
            </div>
            <div class="panel-body">
                @if (assessment.Count > 0)
                {
                    <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    Assessment
                                </th>
                                <th>
                                    Click (+)  for adding Question
                                </th>
                            </tr>
                        </thead>
                        @{
                    int i = 0;
                        }
                        <tbody>
                            @foreach (tbl_assessment item in assessment)
                            {
                                <tr>
                                    <td>
                                        @item.assessment_title
                                    </td>
                                    <td>
                                        <a href="@Url.Action("createAssessmentSheets", "Assessment", new { id = item.id_assessment })"><i class="glyphicon glyphicon-plus-sign"></i></a>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    There are no Assessments Sheets
                                </th>
                            </tr>
                        </thead>
                    </table>
                }
            </div>

        </div>
    </div>
</div>
