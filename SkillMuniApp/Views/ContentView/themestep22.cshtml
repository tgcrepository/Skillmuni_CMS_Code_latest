@{
    int step = (int)ViewData["step-count"];
    tbl_content_answer_steps steps = null;
    if (ViewData["stepinfo"] != null)
    {
        steps = (tbl_content_answer_steps)ViewData["stepinfo"];
    }
    else
    {
        steps = new tbl_content_answer_steps();
    }
}
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <textarea class="form-control validate[required]" name="step-@(step)-part1" id="step-@(step)-part1" placeholder="Say" rows="4">@steps.ANSWER_STEPS_PART1</textarea>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label for="FirstName" class="control-label col-md-1">Image:</label>
            <div class="col-md-10">
                <input type="text" class="form-control validate[required]" readonly value="@(steps.ANSWER_STEPS_IMG1)" placeholder="Choose Image" id="step-@(step)-image-1" name="step-@(step)-image-1" />
                <div class="fileUpload btn btn-primary">
                    <span>Browse Image</span>
                    <input id="step-@(step)-btn-1" name="step-@(step)-btn-1" class="upload" type="file" accept="image/*" onchange="select_file('step-@(step)-btn-1', 'step-@(step)-image-1')" />
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <textarea class="form-control" name="step-@(step)-part2" id="step-@(step)-part2" placeholder="Ask" rows="10">@steps.ANSWER_STEPS_PART2</textarea>
        </div>
    </div>
</div>
