@{
    int step = (int)ViewData["step-count"];
    tbl_content_answer_steps steps = null;
    if (ViewData["stepinfo"] != null)
    {
        steps = (tbl_content_answer_steps)ViewData["stepinfo"];
    }
    else
    {
        steps = new tbl_content_answer_steps();
    }
}
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <textarea class="form-control validate[required]" name="step-@(step)-part1" id="step-@(step)-part1" placeholder="" rows="6">@steps.ANSWER_STEPS_PART1</textarea>
        </div>
    </div>
</div>