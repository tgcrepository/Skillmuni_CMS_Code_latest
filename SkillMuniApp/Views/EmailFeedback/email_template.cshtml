
@{
    ViewBag.Title = "email_template";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    List<m2ostnext.Models.Email_template_cms> temp = (List<m2ostnext.Models.Email_template_cms>)ViewData["temp"];
}

<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });
</script>
<div class="content">
    <div class="col-md-12 column">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h6 class="panel-title">Email Template</h6>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a style="background: #018ccf; color: white;margin-top: 13px;margin-left: -177px;" href="@Url.Action("add_email_template", "EmailFeedback")" class="btn btn-default">Create Template</a>
                </div>
            </div>
            <hr />
            <div class="panel-body">
                <div class="row">
                    <table id="report-table" class="table table-striped  table-bordered dataTable sm" width="100%" border="0" cellspacing="0" cellpadding="0">
                        <thead>
                            <tr>
                                <th>
                                    Role Name
                                </th>
                                <th>
                                    Body Content
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in temp)
                            {
                                <tr>
                                    <td>
                                        @item.role_name
                                    </td>
                                    <td>
                                        <a class="showbtn" data-toggle="modal" data-target="#Modal_@item.id_email_template"><i class="glyphicon glyphicon-eye-open"></i></a>

                                    </td>
                                    <td>
                                        <a href="@Url.Action("edit_Email_Feedback_Template","EmailFeedback", new { id_email_template = item.id_email_template })" target="_blank">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                    </td>
                                </tr>

                            }
                        </tbody>

                    </table>

                </div>
            </div>
            @foreach (var item in temp)
            {
                <div id="Modal_@item.id_email_template" class="modal fade" role="dialog">
                    <div class="modal-dialog" style="width:80%">

                        <!-- Modal content-->
                        <div class="modal-content">

                            <div class="modal-body" style="    padding: 4%;">
                                    @item.data
                               
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
            </div>
    </div>
</div>







