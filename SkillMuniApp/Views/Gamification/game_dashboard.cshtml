
@{
    ViewBag.Title = "game_dashboard";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
   
   List<m2ostnext.Models.GameElements> assessment_list = (List<m2ostnext.Models.GameElements>)ViewData["game"];

}


<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });
</script>

@{
    System.DateTime CURRENT = System.DateTime.Now;
    List<m2ostnext.Models.GameElement> eModel = (List<m2ostnext.Models.GameElement>)ViewData["game"];
}
<div class="row clearfix">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Gaming Dashboard</h4>
            </div>
            <div class="panel-body">
                <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th width="25%">
                                Game Title
                            </th>
                            <th width="10%">
                                Creator
                            </th>
                            <th width="12%">
                                Created On
                            </th>  
                            <th width="10%">
                                Game Mode
                                
                            </th>
                            <th width="15%">
                                Game Type
                               
                            </th>
                            <th width="15%">
                                Player Type
                                
                            </th>                                                 
                            
                            @*<th width="10%">
                                Pending
                            </th>
                            <th width="10%">
                                Rejected
                            </th>*@
                        </tr>
                    </thead>
                    @{
                        int i = 0;
                    }
                    <tbody>
                        @foreach (var item in assessment_list)
                        {
                            <tr>
                                <td>
                                  
                                       @item.game_title
                                    
                                </td>
                                <td>
                                   @item.game_creator_name
                                </td>
                                <td>
                                    @item.game_creation_datetime
                                </td>
                                <td>
                                    @item.game_mode
                                </td>
                                <td>
                                  @item.game_type
                                </td>
                                <td>
                                    @item.player_type
                                </td>
                               

                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
