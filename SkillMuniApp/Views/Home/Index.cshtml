<script>
    $(function () {
        $("#form_login").validationEngine();
        $("#error_alert").hide();
        $("#exp_alert").hide();
    });


    function form_login_submit() {
        var valid = $("#form_login").validationEngine('validate');
        if (valid) {
            var uname = $("#UserID").val();
            var password = $("#Password").val();
            // $('#aLink').click();
            var form_data = $("#form_login").serialize();
            var url = '@Url.Action("loginPost", "Login")';
            $.post(url, form_data, function (data, sts) {
                //  $.fancybox.close();
                if (data.isRedirect) {
                    $.cookie("username", uname);
                    $.cookie("password", password);
                    window.location.href = data.redirectUrl;
                } else if (data == "FALSE") {
                    $("#error_alert").show();
                    $('#form_login')[0].reset();
                    setTimeout(function () {
                        $("#error_alert").hide();
                    }, 2000);
                }
                else if (data == "EXP")
                {
                    $("#exp_alert").show();
                    $('#form_login')[0].reset();
                    setTimeout(function () {
                        $("#exp_alert").hide();
                    }, 5000);

                }

            });
        }
    }
</script>

