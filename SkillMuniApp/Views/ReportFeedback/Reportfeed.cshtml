
@{
    ViewBag.Title = "Reportfeed";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    List<m2ostnext.Models.feedbackmodel> feedback = (List<m2ostnext.Models.feedbackmodel>)ViewData["feedback"];
    string imgPath = ViewData["imgPath"].ToString();
}

    @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />*@

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" defer></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.8/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/registerreport/StyleSheet1.css">
    <script type="text/javascript" src="~/Content/registerreport/pagination.js"></script>

    <style>
         #report-table_filter input {
            border: 1px solid #ccc;
        }
    </style>    

    <div class="content">
        <div class="panel-heading">
            <h4 style="color:black"><b>Feedback list</b></h4>
        </div>
        <div class="panel-body" id="report-table_filter">
            <table id="manja" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th width="20%">
                            Name
                        </th>
                        <th width="10%">
                            Email
                        </th>
                        <th width="10%">
                            Description
                        </th>
                        <th width="10%">
                            Issue
                        </th>
                        <th width="10%">
                            Content
                        </th>
                        <th width="10%">
                            Suggestion
                        </th>
                        <th width="10%">
                            UI
                        </th>
                        <th width="10%">
                            Created date
                        </th>
                        <th width="10%">
                            Media
                        </th>

                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in feedback)
                    {

                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Contact
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.IfIssue
                            </td>
                            <td>
                                @item.ContentIssue
                            </td>

                            <td>
                                @item.IfSuggestion
                            </td>
                            <td>
                                @item.UIIssue
                            </td>
                            <td>
                                @item.CreatedDate
                            </td>
                            <td>
                                @if (item.Attachment == null)
                                {
                                    
                                }
                                else
                                {
                                    <img src="@Html.Raw(imgPath)Content/Feedback/@item.Attachment" width="50" height="50" />
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

