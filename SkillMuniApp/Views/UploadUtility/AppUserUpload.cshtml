<script>
    $("#form-add-cms-user").submit(function (event) {
        loading_on();
    });

    function select_file(btn) {
     
        $("#txt-select-file").val("" + $("#uploadBtn").val().replace(/C:\\fakepath\\/i, '') + "");
    }

   
</script>
