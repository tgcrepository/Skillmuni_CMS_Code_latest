<div class="content">
    <div class="col-md-12 column">
        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Upload Utility</h4>
            </div>
            <div class="panel-body">
                <div class="row" style="padding-right: 12%;">

                    <a style="float: right;" href="http://103.7.64.68/m2ostbeta/Content/AppUserTemplate/UserCreationTemplate.xlsx" download="proposed_file_name">  <input id="" value="Download Template" style=" background: #1ab394; color: white; border: none; padding: 8%;" class="" type="button" /></a>

                </div>
                <div class="form-horizontal">
                    @using (Html.BeginForm("UserUploadDisplay", "UploadUtility", FormMethod.Post, new { id = "form-add-cms-user", enctype = "multipart/form-data" }))
                    {

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-10 col-md-offset-1">
                                        <label for="FirstName" class="control-label ">Select User Upload Excel File   :</label>
                                        <input type="text" class="form-control validate[required]" readonly placeholder="Select File" id="txt-select-file" name="txt-select-file" />
                                        <div class="fileUpload btn btn-primary">
                                            <span>browse excel file </span>
                                            <input id="uploadBtn" name="uploadBtn" class="upload" type="file" accept=".xls,.xlsx" onchange="select_file(uploadBtn)" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-offset-2 col-md-1">
                                <input type="submit" value="Submit" class="btn btn-default" style="background-color:#43e4ee" />
                            </div>
                            <div class="col-md-offset-2 col-md-push-3">
                                <a class="btn btn-primary btn-default " href="@Url.Action("AppUserUpload", "UploadUtility")" style="background-color:#43e4ee"> Cancel </a>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
    @if (error != "null")
    {
        <script>
                            alert("@error")
        </script>
    }

</div>

