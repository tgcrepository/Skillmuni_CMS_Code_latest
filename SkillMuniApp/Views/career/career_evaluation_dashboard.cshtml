
@{
    ViewBag.Title = "career_evaluation_dashboard";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    List<tbl_ce_career_evaluation_master> tcem = (List<tbl_ce_career_evaluation_master>)ViewData["tcem"];
}
<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });
</script>

<div class="content">
    <div class="col-md-12 column">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h6 class="panel-title">Career Evaluation Dashboard</h6>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-primary btn-default pull-right" href="@Url.Action("career_evaluation", "career")">Create Career Evaluation</a>
                        <br /><hr />
                        <div class="div-table-class">
                            <br />
                            <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th width="5%">ID</th>
                                        <th width="50%">Career Evaluation Title</th>
                                        <th width="20%">Type</th>
                                        <th width="10%">Created Date</th>
                                        <th width="10%">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in tcem)
                                    {
                                        <tr>
                                            <td>@item.id_ce_career_evaluation_master</td>
                                            <td>
                                                <a href="@Url.Action("career_evaluation_preview", "career", new { v = item.career_evaluation_code })" >
                                                    <i class="glyphicon glyphicon-list"></i> &nbsp; @item.career_evaluation_title
                                                </a>
                                            </td>
                                            <td>
                                                @if (item.ce_assessment_type == 1)
                                                {
                                                    <span>SUL-MCA</span>
                                                }
                                                else if (item.ce_assessment_type == 2)
                                                {
                                                    <span>SUL-Psychometric</span>
                                                }
                                            </td>
                                            <td>@item.created_date</td>
                                            <td>
                                                @if (item.status == "D")
                                                {
                                                    <span>Draft</span>
                                                }
                                                else
                                                {
                                                    <span>Published</span>
                                                }
                                            </td>
                                           
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>