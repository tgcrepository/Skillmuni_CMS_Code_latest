                        <h4><strong>Action URL : </strong>@banner.banner_action_url</h4>
                    </div>
                    @*<div class="col-md-2">
                                @{
                        urls = urls + @banner.banner_image;
                                }
                                <strong>Preview: </strong><a href="@urls" target="_blank"><i class="glyphicon glyphicon-text-background"></i></a>
                            </div>*@
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <h4>NO BANNER ATTACHED</h4>
                    </div>
                </div>

            }


            <hr />
            <h3>Linked Content : </h3>
            @if (linked.Count > 0)
            {

                foreach (tbl_content item in linked)
                {
                    <div class="row">
                        <div class="col-md-12">
                            <h5><a id="@item.ID_CONTENT" href="@Url.Action("loadcontent", "contentDashboard" , new { id=item.ID_CONTENT })">@item.CONTENT_QUESTION</a></h5>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <h3>There is no Linked Content </h3>
                    </div>
                </div>
            }


            <hr />
            <h3>Assessment :</h3>
            @if (assessments.Count > 0)
            {
                foreach (tbl_assessment item in assessments)
                {
                    <div class="row">
                        <div class="col-md-12">
                            <h5><a id="@item.id_assessment" target="_blank" href="@Url.Action("LoadAssessment", "Assessment" , new { id=item.id_assessment })">@item.assessment_title</a></h5>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <h3>There is no Assessment</h3>
                    </div>
                </div>
            }


            <hr />
            <div class="row">
                <div class="col-md-12">
                    <div class="">
                        <h3>
                            Status :<strong>

                                @if (content.STATUS == "P")
                                {
                                    @("Pending ")
                                }
                                else if (content.STATUS == "D")
                                {
                                    @("Rejected ")
                                }
                                else if (content.STATUS == "A")
                                {
                                    @("Approved")
                                }
                            </strong>
                        </h3>

                        @if (String.IsNullOrEmpty(content.COMMENT))
                        {
                            <h4>Approver Comments : </h4>
                            <pre> @(content.COMMENT)</pre>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
