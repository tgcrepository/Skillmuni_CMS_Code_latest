@{
    ViewBag.Title = "add_category_headers";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
}

@{
    List<tbl_category_tiles> cat_list = (List<tbl_category_tiles>)ViewData["tiles"];
}
<div class="content">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Add Category Heading</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("add_cms_category_headers", "csst_category", FormMethod.Post, new { id = "form_add_category", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Select Category Tile  :</label>
                                    <div class="col-md-4">
                                        <select name="select-category-tile" class="form-control  validate[required]">
                                            <option value="" selected disabled>Select Category Tile</option>
                                            @foreach (tbl_category_tiles item in cat_list)
                                            {
                                                <option value="@item.id_category_tiles">@item.tile_heading</option>
                                            }
                                        </select>
                                    </div>
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Category Heading Name :</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control validate[required]" value="" placeholder="Category Heading Name" id="category-heading" name="category-heading" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Category Heading Name :</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control validate[required]" value="" placeholder="Category Heading Name" id="category-heading" name="category-heading" />
                                    </div>
                                </div>
                            </div>
                        </div>*@
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Heading Order No:</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control validate[required]" value="" placeholder="Order" id="category-order" name="category-order" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
                <hr />

            </div>
        </div>
    </div>
</div>


