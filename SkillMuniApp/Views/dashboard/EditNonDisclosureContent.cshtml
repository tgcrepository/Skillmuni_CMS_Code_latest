    ViewBag.Title = "EditNonDisclosureContent";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    m2ostnext.Models.tbl_non_disclousure_clause_content content = (m2ostnext.Models.tbl_non_disclousure_clause_content)ViewData["content"];

}

