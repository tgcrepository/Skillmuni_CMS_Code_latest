
@{
    ViewBag.Title = "industryview";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
}

<script>

    $(function () {
        $("#form_add_category").validationEngine();
    });

    function select_file() {
        var file = $("#uploadBtn")[0].files[0];
        var filename = "";
        if (file) {
            filename = file.name;
        }
        $("#ImageFile").val(filename);
    }


</script>
<div class="row clearfix">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Add Industry</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("add_industry_job_action", "industryjob", FormMethod.Post, new { id = "form_add_category", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Industry Name :</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control validate[required]" value="" placeholder="Industry Name" id="Industry" name="Industry" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Industry Code :</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control validate[required]" value="" placeholder="Industry code" id="code" name="code" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Description:</label>
                                    <div class="col-md-9">
                                        <textarea class="form-control validate[required]" placeholder="Description" id="Description" name="Description" rows="6"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Tile Image:</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control validate[required]" readonly value="" placeholder="Choose Image" id="ImageFile" name="ImageFile" />
                                        <div class="fileUpload btn btn-primary">
                                            <span>Browse Image</span>
                                            <input id="uploadBtn" name="uploadBtn" class="upload" type="file" accept="image/*" onchange="select_file()" />

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Tile position :</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control validate[required]" value="" placeholder="Tile position" id="position" name="position" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Button Text:</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control validate[required]" value="click here" readonly placeholder="Button Text" id="buttontext" name="buttontext" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="link-url-category" style="display:none;">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="FirstName" class="control-label col-md-2 regLabel">Redirection URL : </label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control validate[required,custom[url]]" value="http://" placeholder="" id="red_url" name="red_url" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" style="background-color: #018ccf; color: white; width: 58px; height: 29px;"/>
                            </div>
                        </div>
                    </div>
                }
                <hr />


            </div>
        </div>
    </div>
</div>
