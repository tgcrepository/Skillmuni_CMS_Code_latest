@{
    ViewBag.Title = "Edit Organization";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
}
<script>
    $(function () {
        $("#form-add-organisation").validationEngine();
    });

    function select_file(btn, imgf, ban) {
        var file = $("#" + btn + "")[0].files[0];
        var filename = "";
        if (file) {
            filename = file.name;
        } else {
        }
        $("#" + imgf + "").val(filename);
    }

</script>
@{
    tbl_organization orgntn = (tbl_organization)ViewData["organization"];

}
<div class="row clearfix">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Edit Organization</h4>
            </div>
            <div class="panel-body">


                @using (Html.BeginForm("editOrganisation", "contentDashboard", FormMethod.Post, new { id = "form-add-organisation", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
    <input type="hidden" id="id_organization" name="id_organization" value="@orgntn.ID_ORGANIZATION" />
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Industry Name</label></div>

                            <div class="col-md-5">
                                <select id="select-industry" name="select-industry" class="form-control">
                                    @foreach (var pro in (List<tbl_industry>)ViewData["select-industry"])
                                    {
                                        <option @if (orgntn.ID_INDUSTRY == pro.ID_INDUSTRY) { @("selected") } value="@pro.ID_INDUSTRY">@pro.INDUSTRYNAME</option>
                                    }
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Businuss Type</label></div>

                            <div class="col-md-5">
                                <select id="select-businuss-type" name="select-businuss-type" class="form-control">
                                    @foreach (var pro in (List<tbl_business_type>)ViewData["select-business-type"])
                                    {
                                        <option @if (orgntn.ID_BUSINESS_TYPE == pro.ID_BUSINESS_TYPE) { @("selected")  } value="@pro.ID_BUSINESS_TYPE">@pro.BUSINESS_TYPE_NAME</option>
                                    }
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Organisation Name</label></div>

                            <div class="col-md-10">
                                <input type="text" class="form-control validate[required]" value="@orgntn.ORGANIZATION_NAME" placeholder="" id="organisation-name" name="organisation-name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Description</label></div>

                            <div class="col-md-10">
                                <input type="text" class="form-control validate[required]" value="@orgntn.DESCRIPTION" placeholder="" id="organisation-desc" name="organisation-desc" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Contact Name</label></div>
                            <div class="col-md-10">
                                <input type="text" class="form-control validate[required]" value="@orgntn.CONTACT_NAME" placeholder="" id="organisation-contact" name="organisation-contact" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Contact No</label></div>

                            <div class="col-md-10">
                                <input type="text" class="form-control validate[required,custom[phone]]" value="@orgntn.CONTACTNUMBER" placeholder="" id="organisation-contact-no" name="organisation-contact-no" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Contact Email</label></div>

                            <div class="col-md-10">
                                <input type="text" class="form-control validate[required,custom[email]]" value="@orgntn.CONTACTEMAIL" placeholder="" id="organisation-email" name="organisation-email" />
                            </div>
                        </div>
                        <!-- ----------------------------------- -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-2">
                                     
                                    </div>
                                    <div class="col-md-10">
                                        <a href="@ViewData["Logos"]" target="_blank" ><i class="glyphicon glyphicon-text-background"></i>&nbsp;Organisation Logo</a> &nbsp;&nbsp;&nbsp;&nbsp;
                                        <a href="@ViewData["Banner"]" target="_blank"><i class="glyphicon glyphicon-modal-window"></i>&nbsp;Organisation Banner</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                   
                        <!-- ----------------------------------- -->

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-2"><label class="control-label">Logo Image</label></div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" readonly value="" placeholder="Logo Image" id="logo-image" name="logo-image" />
                                    <div class="fileUpload btn btn-primary">
                                        <span>Browse Image</span>
                                        <input id="logo-btn" name="logo-btn" class="upload" type="file" accept="image/*" onchange="select_file('logo-btn', 'logo-image', 'logo-text')" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-2"><label class="control-label">Banner Image</label></div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control " readonly value="" placeholder="Banner Image" id="banner-image" name="banner-image" />
                                    <div class="fileUpload btn btn-primary">
                                        <span>Browse Image</span>
                                        <input id="banner-btn" name="banner-btn" class="upload" type="file" accept="image/*" onchange="select_file('banner-btn', 'banner-image', 'banner-text')" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Edit" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>


    </div>
    </div>