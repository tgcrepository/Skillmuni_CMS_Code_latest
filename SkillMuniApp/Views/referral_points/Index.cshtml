
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    List<tbl_referral_code_points_config> referral = (List<tbl_referral_code_points_config>)ViewData["referral"];
}


<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });
</script>
<div class="content">
    <div class="col-md-12 column">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h6 class="panel-title">Referral Points Config Page</h6>
            </div>
            @*<div class="form-group">
                @*<div class="col-md-offset-2 col-md-10">
                    <a style="background: #018ccf; color: white;margin-top: 13px;margin-left: -177px;" href="@Url.Action("add_referral_points", "referral_points")" class="btn btn-default">Create Points</a>
                </div>
            </div>
            <hr />*@
            <div class="panel-body">
                <div class="row">
                    <table id="report-table" class="table table-striped  table-bordered dataTable sm" width="100%" border="0" cellspacing="0" cellpadding="0">
                        <thead>
                            <tr>
                                <th>
                                    Referral Type
                                </th>
                                <th>
                                    Points
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in referral)
                            {
                                <tr>
                                    <td>
                                        @item.ref_type
                                    </td>
                                    <td>
                                        @item.ref_points
                                    </td>
                                    <td>
                                        <a href="@Url.Action("edit_referral_points","referral_points",new { ref_type= item.ref_type})" target="_blank">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                    </td>
                                </tr>

                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@*,new { emp_id = item.emp_id}*@