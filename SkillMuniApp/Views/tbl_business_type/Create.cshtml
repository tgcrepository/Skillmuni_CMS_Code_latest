@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";

}
<div id="pagecontent_dashboard" class="container">
    <div class="panel panel-default ">
        <div class="panel-heading">
            <h4 class="panel-title">Add Business Type</h4>
        </div>
        <div class="panel-body">

            @using (Html.BeginForm("createBusinesstype", "contentDashboard", FormMethod.Post, new { id = "form-add-industry" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2"><label class="control-label">Business Type</label></div>
                        
                        <div class="col-md-10">
                            <input type="text" class="form-control validate[required]" value="" placeholder="" id="businesstype-name" name="businesstype-name" />
                        </div>
                    </div>
                    <div class="form-group"><div class="col-md-2"><label class="control-label">Description</label></div>
                        
                        <div class="col-md-10">
                            <input type="text" class="form-control validate[required]" value="" placeholder="" id="businesstype-desc" name="businesstype-desc" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
