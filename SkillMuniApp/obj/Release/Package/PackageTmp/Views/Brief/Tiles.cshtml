@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
}
@{
    List<tbl_brief_category_tile> tiles = (List<tbl_brief_category_tile>)ViewData["tiles"];
}

<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });
</script>

<div class="content">
    <div class="col-md-12 column">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h6 class="panel-title">Brief Category Tiles</h6>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-primary btn-default pull-right" href="@Url.Action("createTile", "Brief")"> Create Tile  </a>
                        <br /><hr />
                        <div class="div-table-class">
                            <br />
                            <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th width="5%">ID</th>
                                        <th width="20%">Brief Tile Title</th>
                                        <th width="35%">Description</th>
                                        <th width="10%">Type</th>
                                        <th width="5%">Tile Position</th>
                                        <th width="5%">Limit on Attempt</th>
                                        <th width="10%">Tile Type</th>
                                        <th width="10%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (tbl_brief_category_tile item in tiles)
                                    {
                                        <tr>
                                            <td>@item.id_brief_category_tile</td>
                                            <td>
                                                @item.category_tile
                                            </td>
                                            <td>
                                                @item.tile_description
                                            </td>
                                            <td>
                                                @if (item.category_tile_type == 1)
                                                {
                                                    @("Values")
                                                }
                                                else if (item.category_tile_type == 2)
                                                {
                                                    @("OD Program ")
                                                }
                                                else if (item.category_tile_type == 3)
                                                {
                                                    @("Learning Journey")
                                                }
                                            </td>
                                            <td>@item.tile_position</td>
                                            <td>
                                                @item.attempt_limit
                                            </td>
                                            <td>
                                                @if (item.tile_type == 1)
                                                {
                                                    @("Academy")
                                                }
                                                else if (item.tile_type == 2)
                                                {
                                                    @("Study Abroad")
                                                }
                                                else if (item.tile_type == 3)
                                                {
                                                    @("Entrepreneur")
                                                }
                                            </td>
                                            <td>
                                                <a style="margin-left:5px;" href="@Url.Action("editCategoryTile", "Brief" , new { cit=item.id_brief_category_tile })" class="btn btn-default  pull-right"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                                <a style="margin-left:5px;" href="@Url.Action("setCategoryTileMapping", "Brief" , new { cit=item.id_brief_category_tile })" class="btn btn-default  pull-right"><i class="glyphicon glyphicon-share-alt"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <br /><hr />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>