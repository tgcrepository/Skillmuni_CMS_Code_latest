@{
    ViewBag.Title = "ContentReportOptionDetails";
    Layout = "";
}

@{
    List<m2ostnext.Models.ContentReport> list = (List<m2ostnext.Models.ContentReport>)ViewData["ContentReport"];
}

<link rel="stylesheet" href="~/Content/fancybox/source/jquery.fancybox.css?v=2.1.5" type="text/css" media="screen" />
<script type="text/javascript" src="~/Content/fancybox/source/jquery.fancybox.pack.js?v=2.1.5"></script>

<link rel="stylesheet" href="~/Content/fancybox/source/helpers/jquery.fancybox-thumbs.css?v=1.0.7" type="text/css" media="screen" />
<script type="text/javascript" src="~/Content/fancybox/source/helpers/jquery.fancybox-thumbs.js?v=1.0.7"></script>


<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });

    function fancybody(cntrl, act) {

        var link = '@Url.Action("action", "control")';
        link = link.replace("action", act);
        link = link.replace("control", cntrl);

        $("#_iframe").attr('src', link);
        $.fancybox.open([{
            href: '#form_popup_map'
        }]);
    }
</script>


<div class="row clearfix">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Filtered Result</h4>
                <div align="right" style="padding-top: 0px;margin-top: -22px;margin-bottom: 5px;">
                    <a href="javascript:(0);" onclick="fancybody('ContentReport', 'ContentGraphReportIndex')">
                        <span class="icon-input-btn"><span class="glyphicon glyphicon-stats" style="color: white;"></span>&nbsp;  <input style="margin-bottom: -11px;margin-left: 15px;width: 73px;height: 28px;text-align: right;/* padding-top: 20px; */" type="button" value="Chart" name="btn_chart" class="btn btn-danger" /></span>

                    </a>
                </div>
             </div>
            <div class="panel-body">
                <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                    <thead>
                        <tr>

                            <th width="20%">
                                Content
                            </th>
                            <th width="10%">
                                Creation Date
                            </th>
                            <th width="10%">
                                Expiry Date
                            </th>
                            <th width="10%">
                                Last Access Date
                            </th>
                            <th width="5%">
                                Option
                            </th>
                            <th width="5%">
                                Count
                            </th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (m2ostnext.Models.ContentReport reportslist in list)
                        {
                            <tr>
                                @*<td>
                                        @reportslist.USERID
                                    </td>*@
                                <td>
                                    @reportslist.content_name
                                </td>
                                <td>
                                    @reportslist.created_dated
                                </td>
                                <td>
                                    @reportslist.expity_date
                                </td>
                                <td>
                                    @reportslist.lastaccess_date
                                </td>
                                <td>
                                    @reportslist.flag
                                </td>
                                <td>
                                    @reportslist.countflag
                                </td>
                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<div style="display: none;">
    <form id="form_popup_map">
        <input type="hidden" id="frame_add_id" value="" />
        <iframe class="fancy" id="_iframe" src=""></iframe>
    </form>
</div>
<style type="text/css">
    .icon-input-btn {
        display: inline-block;
        position: relative;
    }

        .icon-input-btn input[type="submit"] {
            padding-left: 2em;
        }

        .icon-input-btn .glyphicon {
            display: inline-block;
            position: absolute;
            left: 2em;
            top: 63%;
        }

    .Euladox-fancy-container {
        font-family: 'Century Gothic';
        width: auto;
        overflow: hidden;
    }

    .euladox-fancy {
        padding: 1px;
        width: 1024px;
        height: 568px;
    }

    #euladox-fancy-body {
        max-width: 1024px;
    }

    #euladox-fancy-body-view {
        height: auto;
        max-width: 1024px;
        max-height: 600px;
    }
</style>