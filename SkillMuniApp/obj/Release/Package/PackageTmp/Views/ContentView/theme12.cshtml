@{
    tbl_content content = null;
    tbl_content_answer answer = null;
    if (ViewData["content"] != null)
    {
        content = (tbl_content)ViewData["content"];
    }
    else
    {
        content = new tbl_content();
    }
    if (ViewData["answer"] != null)
    {
        answer = (tbl_content_answer)ViewData["answer"];
    }
    else
    {
        answer = new tbl_content_answer();
    }

}

<div class="row">
    <div class="col-md-12">
        <div id="theme-1-header" class="form-group">
            <input type="text" class="form-control validate[required]" value="@content.CONTENT_TITLE" placeholder="Content Title" id="t-title" name="t-title" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="theme-1-header" class="form-group">
            <input type="text" class="form-control validate[required]" value="@content.CONTENT_HEADER" placeholder="Content Header" id="t-header" name="t-header" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <textarea class="form-control validate[required]" name="t-quetion" id="t-quetion" placeholder="Content Question" rows="6">@content.CONTENT_QUESTION</textarea>
        </div>
    </div>
</div>
<hr />


<div class="row">
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-12">
                <label for="FirstName" class="control-label">Image 1:</label>
                <div class="row">
                    <div class="col-md-10" style="padding-right:1px;">
                        <input type="text" class="form-control validate[required]" readonly value="@answer.CONTENT_ANSWER_IMG1" placeholder="Choose Image" id="t-ans-image-1" name="t-ans-image-1" />
                    </div>
                    <div class="col-md-2" style="padding-left:1px;">
                        <div class="fileUpload btn btn-primary">
                            <span>Browse </span>
                            <input id="t-btn-1" name="t-btn-1" class="upload" type="file" accept="image/*" onchange="select_file('t-btn-1', 't-ans-image-1')" />
                        </div>
                    </div>
                </div>
                <textarea class="form-control validate[required]" placeholder="Enter Caption Text" name="t-content-1" id="t-content-1" rows="2">@answer.CONTENT_ANSWER1</textarea>
            </div>
        </div>
    </div>
