@{
    int step = (int)ViewData["step-count"];
    tbl_content_answer_steps steps = null;
    if (ViewData["stepinfo"] != null)
    {
        steps = (tbl_content_answer_steps)ViewData["stepinfo"];
    }
    else
    {
        steps = new tbl_content_answer_steps();
    }
}


<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <label for="FirstName" class="control-label">Image 1:</label>
                <div class="row">
                    <div class="col-md-10" style="padding-right:1px;">
                        <input type="text" class="form-control validate[required]" readonly value="@(steps.ANSWER_STEPS_IMG1)" placeholder="Choose Image" id="step-@(step)-image-1" name="step-@(step)-image-1" />
                    </div>
                    <div class="col-md-2" style="padding-left:1px;">
                        <div class="fileUpload btn btn-primary">
                            <span>Browse </span>
                            <input id="step-@(step)-btn-1" name="step-@(step)-btn-1" class="upload" type="file" accept="image/*" onchange="select_file('step-@(step)-btn-1', 'step-@(step)-image-1')" />
                        </div>
                    </div>
                </div>
                <textarea class="form-control validate[required]" name="step-@(step)-part-1" id="step-@(step)-part-1" placeholder="Enter Caption Text" rows="4">@steps.ANSWER_STEPS_PART1</textarea>
            </div>
        </div>
    </div>
