    function getContentReport(type) {
        alert("fun");
        loading_on();
        
        var id = $("#gp_id").val();
       
        var url = '@Url.Action("getUserListForGroup", "Gamification")';
        var pattern = "";
        if (type == "3") {
            pattern = $("#search-box-user").val().trim();
            $('#search-box-user').attr('readonly', true);
            id = 0;
        } else if (type == "2") {
            pattern = $("#search-lbox").val().trim();
            var lid = $("#location-select").val();
            pattern = lid + "|" + pattern;
            id = 0;
        } else {
            pattern = $("#search-box").val().trim();
        }

        var cid = $("#id_program").val();
        var count = pattern.trim().length;
        var ctid = $("#tile-category").val();
        var chid = $("#heading-category").val();
        if (true) {
            if (count >= 3 || id > 0) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: { id: id, pattern: pattern,  type: type },

                    success: function (data) {
                        $("#display_table").empty().append(data);
                        $("#report-table").dataTable({
                            "bSort": false,
                            "pageLength": 50
                        });
                    }
                });
            } else {
                if (id == 0) {
                    $("#msg-txt").html("<p>Enter minimun of 3 character to search</p>");
                    $('#m2ost-dialog').modal('show');
                }
            }
        } else {
            $("#msg-txt").html("<p>Please select Category Tile and Category Heading for the Program</p>");
            $('#m2ost-dialog').modal('show');
        }
        loading_off();
    }



   

    function RoleType(val) {
        $("#role-type").val(val);
        $("#display_table").empty();
        if (val == 1) {
            $("#div-row-role").show();
            $("#div-row-user").hide();
            $("#div-row-all").hide();
            $("#div-row-location").hide();
        } else if (val == 2) {
            $("#div-row-role").hide();
            $("#div-row-user").hide();
            $("#div-row-all").hide();
            $("#div-row-location").show();
        } else if (val == 3) {
            $("#div-row-role").hide();
            $("#div-row-user").show();
            $("#div-row-all").hide();
            $("#div-row-location").hide();
        } else if (val == 4) {
            $("#div-row-role").hide();
            $("#div-row-user").hide();
            $("#div-row-all").show();
            $("#div-row-location").hide();
        }
    }

