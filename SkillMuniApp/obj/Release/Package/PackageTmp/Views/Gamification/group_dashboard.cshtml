
@{
    ViewBag.Title = "Group Dashboard";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
}


<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });
</script>

@{
    List<m2ostnext.Models.GameGroup> gameGroup = (List<m2ostnext.Models.GameGroup>)ViewData["group"];
}
<div class="row clearfix">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Group Dashboard</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-primary btn-default pull-right" href="@Url.Action("add_group", "Gamification")"> + Add new Group  </a>
                &nbsp;<br /><br />
                <hr />
                <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th width="75%">
                                Group Title
                            </th>
                            <th width="15%">
                                Participant Count
                            </th>
                            <th width="10%">
                                
                            </th>


                        </tr>
                    </thead>
                    @{
                        int i = 0;
                    }
                    <tbody>
                        @foreach (var item in gameGroup)
                        {
                            <tr>
                                <td>

                                    @item.group_name

                                </td>
                                <td>
                                    @item.group_count
                                </td>
                                <td>
                         
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
