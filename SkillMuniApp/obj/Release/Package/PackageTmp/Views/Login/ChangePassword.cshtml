        background-color: #1ab394;
        border-color: #1ab394;
        color: #FFFFFF;
    }
</style>

<div class="row clearfix">
    <div class="col-md-12 column">
        <div class="dashboard-middle row clearfix">

            <div class="dashboard-mid-1 col-md-12 column">
                <div class="panel panel-default dashboard_panel">
                    <div class="panel-heading">
                        <h6 class="panel-title">Change Password</h6>
                    </div>
                    <div class="panel-body">
                        @*@using (Html.BeginForm("change_password", "Login", FormMethod.Post, new { id = "form_pass" }))
                        {*@
                            <form id="form_login" method="post" autocomplete="off" action="/form">
                                <div class="modal-body form-horizontal">
