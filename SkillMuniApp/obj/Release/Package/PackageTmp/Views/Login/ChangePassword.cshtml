                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script>



    $(function () {
        $("#form_pass").validationEngine();
    });

    function form_pass_submit() {
        var valid = $("#form_pass").validationEngine('validate');
        if (valid) {
            var form_data = $("#form_pass").serialize();
            var url = '@Url.Action("change_password", "Login")';
            $.post(url, form_data, function (data, sts) {
                if (data.flag) {
                    alert(data.msg);
                    window.location.href = "../dashboard/Index";
                } else {
                    alert(data.msg);
                }
            });
        }
    }

    function Close() {
        window.location.href = "../dashboard/Index";
    }

</script>