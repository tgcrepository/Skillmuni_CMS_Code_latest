
@{
    ViewBag.Title = "DisplayVendorDetails";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });

</script>

@{
    List<tbl_vendor_registration> vender = (List<tbl_vendor_registration>)ViewData["select-vendordetails"];
}
<div class="row clearfix">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Display Vendor Details</h4>
            </div>
            <div class="panel-body">
                <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th width="10%">
                                Mobile Number
                            </th>
                            <th width="10%">
                                First Name
                            </th>
                            <th width="10%">
                                Last Name
                            </th>
                            <th width="10%">
                                Address
                            </th>
                            <th width="10%">
                                Email ID
                            </th>
                            <th width="10%">
                                Company Name
                            </th>
                            @*<th width="10%">
                                Country Name
                            </th>
                            <th width="10%">
                                State Name
                            </th>
                            <th width="10%">
                                City Name
                            </th>*@
                            <th width="10%">
                                Pan No
                            </th>
                            <th width="10%">
                                Service Tax No
                            </th>
                            <th width="10%"></th>
                        </tr>
                    </thead>
                    @{
                        int i = 0;
                    }
                    <tbody>
                        @foreach (tbl_vendor_registration item in vender)
                        {
                            <tr>
                                <td>
                                    @item.mobile_number
                                </td>
                                <td>
                                    @item.first_name
                                </td>
                                <td>
                                    @item.last_name
                                </td>
                                <td>
                                    @item.address1
                                </td>
                                <td>
                                    @item.email_id
                                </td>
                                <td>
                                    @item.company_name
                                </td>
                                <td>
                                    @item.pan_no
                                </td>
                                <td>
                                    @item.service_tax_no
                                </td>
                                <td>

                                    &nbsp;<a href="@Url.Action("ListVendorDetails", "Registration", new { id = item.id_vendor_registation })"><i class="glyphicon glyphicon-info-sign"></i></a>&nbsp;|
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

