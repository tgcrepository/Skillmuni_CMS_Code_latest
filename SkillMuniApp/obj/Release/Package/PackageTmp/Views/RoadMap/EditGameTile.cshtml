@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    m2ostnext.Models.tbl_academic_tiles tile = (m2ostnext.Models.tbl_academic_tiles)ViewData["tile"];

}
<script>
    function select_file(btn, imgf, ban) {

        var file = $("#" + btn + "")[0].files[0];
        var filename = "";
        if (file) {
            filename = file.name;
        } else {
        }

        $("#" + imgf + "").val(filename);
    }
</script>

<div class="content">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Edit Academic Tile</h4>
            </div>
            <div class="panel-body">


                @using (Html.BeginForm("EditGameTileAction", "RoadMap", FormMethod.Post, new { id = "form-add-organisation", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()


                    <input type="hidden" value="@tile.id_academic_tile" name="id_tile" />
                    <div class="form-horizontal">


                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Tile Name</label></div>

                            <div class="col-md-10">
                                <input type="text" class="form-control validate[required]" value="@tile.tile_name" placeholder="" id="Tile_Name" name="Tile_Name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Description</label></div>

                            <div class="col-md-10">
                                <input type="text" class="form-control validate[required]" value="@tile.tile_description" placeholder="" id="Description" name="Description" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Select Theme</label></div>
                            <div class="col-md-4">
                                <input type="hidden" name="acad-them-id" value="@tile.theme_id"/>
                                <select id="acad-tile-theme" name="acad-tile-theme" class="form-control" disabled>
                                    <option value="" selected>select</option>
                                    <option value="1">Theme 1</option>
                                    <option value="2">Theme 2</option>
                                </select>
                            </div>
                        </div>

                        @if (tile.theme_id == 2)
                        {
                        <div class="form-group" id="themeUrl-2" style="">
                            <div class="col-md-2"><label class="control-label">URL Details</label></div>
                            <div class="col-md-10">
                                <input type="text" class="form-control validate[required]" value="@tile.url" placeholder="" id="url_value" name="url_value" />
                            </div>
                        </div>
                        }

                        <div class="form-group">
                            <div class="col-md-2"><label class="control-label">Tile Position</label></div>
                            <div class="col-md-10">
                                <input type="number" class="form-control validate[required]" value="@tile.tile_position" placeholder="" id="Position" name="Position" min="1" max="7" />
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-2">
                                    </div>
                                    <div class="col-md-10">
                                        <a href="~/Content/gametile/@tile.tile_image" target="_blank"><i class="glyphicon glyphicon-text-background"></i>&nbsp;Tile Image</a> &nbsp;&nbsp;&nbsp;&nbsp;
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-2"><label class="control-label">Tile Image</label></div>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control validate[required]" readonly value="" placeholder="Logo Image" id="logo-image" name="logo-image" />
                                        <div class="fileUpload btn btn-primary">
                                            <span>Browse Image</span>
                                            <input id="logo-btn" name="logo-btn" class="upload" type="file" accept="image/*" onchange="select_file('logo-btn', 'logo-image', 'logo-text')" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Edit" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#acad-tile-theme").val(@tile.theme_id);
});
</script>