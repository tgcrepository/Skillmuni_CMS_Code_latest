@{
    ViewBag.Title = "GameTiles";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
}
@{
    List<tbl_academic_tiles> tiles = (List<tbl_academic_tiles>)ViewData["tiles"];
}

<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });
</script>

<div class="content">
    <div class="col-md-12 column">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h6 class="panel-title">Academic Tiles Dashboard</h6>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                    
                       
                            <a class="btn btn-primary btn-default pull-left" href="@Url.Action("CreateGameTile", "RoadMap")"> Create Tile  </a>

                        
                        <br /><hr />
                        @if (tiles.Count == 0 || tiles==null)
                        {
                              <p>
                                No tiles found
                            </p>
                        }
                        else
                        {
                        <div class="div-table-class">
                            <br />
                            <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th width="5%">ID</th>
                                        <th width="20%">Academy Tile Title</th>
                                        <th width="35%">Description</th>
                                       
                                        <th width="10%">Tile Position</th>
                                     
                                        <th width="5%"></th>
                                        <th width="5%"></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in tiles)
                                    {
                                        <tr>
                                            <td>@item.id_academic_tile</td>
                                            <td>
                                                @item.tile_name
                                            </td>
                                            <td>
                                                @item.tile_description
                                            </td>
                                            
                                            <td>@item.tile_position</td>
                                           
                                            <td>
                                                <a style="margin-left:5px;" href="@Url.Action("EditGameTile", "RoadMap", new { tileid = item.id_academic_tile })" class="btn btn-default  pull-right"><i class="glyphicon glyphicon-edit"></i></a>
                                            </td>
                                            <td>
                                                <a style="margin-left:5px;" href="@Url.Action("DeleteGameTile", "RoadMap", new { tileid = item.id_academic_tile })" class="btn btn-default  pull-right"><i class="glyphicon glyphicon-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <br /><hr />
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
