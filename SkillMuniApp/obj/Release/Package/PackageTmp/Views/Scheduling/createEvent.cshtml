                            <div class="col-md-offset-2 col-md-push-3">
                                <a href="@Url.Action("createEvent", "Scheduling")" class="btn btn-default btn-info" >Cancel  </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
