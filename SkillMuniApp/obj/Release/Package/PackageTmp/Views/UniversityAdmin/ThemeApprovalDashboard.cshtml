
@{
                /**/

                ViewBag.Title = "ThemeApprovalDashboard";
                Layout = "~/Views/Shared/_cms_Layout.cshtml";
                List<m2ostnext.Models.tbl_theme_master> theme = (List<m2ostnext.Models.tbl_theme_master>)ViewData["theme"];
                List<m2ostnext.Models.theme_preview> preview = (List<m2ostnext.Models.theme_preview>)ViewData["preview"];

}
<style>
    .attr {
        /*border-style: solid;
        border-color: #0a165c;*/
        padding: 5%;
    }
</style>
<script>


</script>


<div class="content">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Theme Approval Dashboard</h4>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="color-box space">
                        <div class="shadow">
                            <div class="info-tab tip-icon" title="Useful Tips">&nbsp;</div>
                            <div class="tip-box">
                                <p><strong>Note:</strong>Please preview theme before approval.If you want to edit any theme , an option is available in Themes Dashboard page.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th width="20%">
                                Theme
                            </th>
                            <th width="10%">
                                Description
                            </th>
                            <th width="10%">
                                Preview
                            </th>
                            <th width="10%">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in theme)
                {
                    <tr>
                        <td>
                            @item.name
                        </td>
                        <td>
                            @item.description
                        </td>

                        <td>
                            <a class="showbtn" data-toggle="modal" data-target="#Modal_@item.id_theme"><i class="glyphicon glyphicon-eye-open"></i></a>

                        </td>
                        <td>
                            <a href="@Url.Action("ApproveThemeAction", "UniversityAdmin", new { id = item.id_theme })"><i class="glyphicon glyphicon-check"></i>Approve</a>


                        </td>
                    </tr>

        }
                    </tbody>
                </table>
            </div>
        </div>


    </div>


</div>

@foreach (var itm in preview)
{
    <div id="Modal_@itm.id_theme" class="modal fade" role="dialog">
        <div class="modal-dialog" style="width:80%">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@itm.name</h4>
                </div>
                <div class="modal-body" style="    padding: 4%;">
              
                    <div class="row">
                        <div class="col-md-6">

                            <div class="table-responsive">
                                <table class="table">

                                    <tbody>
                                        <tr>
                                            <td class="noBorder">Theme</td>
                                            <td class="noBorder">@itm.name</td>
                                            
                                        </tr>
                                        <tr>
                                            <td class="noBorder">Description</td>
                                            <td class="noBorder">@itm.description</td>
                                           
                                        </tr>
                                        <tr>
                                            <td class="noBorder">Last Updated</td>
                                            <td class="noBorder">@itm.updated_datetime</td>
                                           
                                        </tr>
                                      
                                    </tbody>
                                </table>
                            </div>

                           
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="color-box space">
                                        <div class="shadow">
                                            <div class="info-tab tip-icon" title="Useful Tips">&nbsp;</div>
                                            <div class="tip-box">
                                                <p><strong>Note:</strong>If you want to edit any theme , an option is available in Themes Dashboard page.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img style="    margin-left: 9%;width: 75%;height: 223px;" src="http://localhost:54544/Content/SKILLMUNI_DATA/Theme_Logo/@itm.theme_logo" />

                        </div>



                    </div>
                  
                   
                    <hr />
                    <div class="row attr">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3"><label>Metrics</label></div>

                                <div class="col-md-9">
                                  
                                <div class="table-responsive">
                                    <table class="table">

                                        <tbody>
                                            @foreach (var mtr in itm.metric)
    {
                                        <tr>
                                            <td class="noBorder"><i class="glyphicon glyphicon-asterisk"></i> @mtr.metric_value</td>


                                        </tr>

}
                                        </tbody>
                                    </table>
                                </div>
                             


                                </div>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3"><label>Leagues</label></div>

                                <div class="col-md-9">

                                    <div class="table-responsive">
                                        <table class="table">

                                            <tbody>
                                                @foreach (var leag in itm.league)
                {
                                <tr>
                                    <td class="noBorder"><i class="glyphicon glyphicon-flag Level"></i>  @leag.level @leag.league_name</td>


                                </tr>

}
                                            </tbody>
                                        </table>
                                    </div>

                                  

                                </div>

                            </div>
                        </div>
                    </div>
                  
                   
                   
                    <hr />

                    <div class="row attr">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3"><label>Badges</label></div>

                                <div class="col-md-9">
                                    <div class="table-responsive">
                                        <table class="table">

                                            <tbody>
                                                @foreach (var bad in itm.badge)
                {
                                <tr>
                                    <td class="noBorder"><i class="glyphicon glyphicon-certificate"></i> @bad.badge_name</td>


                                </tr>

}
                                            </tbody>
                                        </table>
                                    </div>
                                  
                                </div>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-4"><label>Currency Points</label></div>

                                <div class="col-md-8">

                                    <div class="table-responsive">
                                        <table class="table">

                                            <tbody>
                                                @foreach (var cur in itm.currency)
                {
                                <tr>
                                    <td class="noBorder"><i class="glyphicon glyphicon-usd"></i>@cur.currency_value</td>


                                </tr>

}
                                            </tbody>
                                        </table>
                                    </div>
                                  

                                </div>

                            </div>
                        </div>
                    </div>
                   

                    <hr />
                  

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
}






