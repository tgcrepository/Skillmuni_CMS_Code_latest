
@{
    ViewBag.Title = "ThemeDashboard";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    List<m2ostnext.Models.tbl_theme_master> theme = (List<m2ostnext.Models.tbl_theme_master>)ViewData["theme"];

}

<div class="content">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Theme Dashboard</h4>
            </div>
            <div class="panel-body">
                <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th width="20%">
                                Theme
                            </th>
                            <th width="10%">
                                Description
                            </th>
                            <th width="10%">
                                Status
                            </th>
                            <th width="10%">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in theme)
                        {
                            <tr>
                                <td>
                                    @item.name
                                </td>
                                <td>
                                    @item.description
                                </td>

                                <td>
                                    @if (item.status == "A")
                                    {
                                        <p>Active</p>
                                    }
                                    else
                                    {
                                        <p>In Active</p>
                                    }
                                </td>
                                <td>
                                    @if (item.status != "A")
                                    {
                                <a href="@Url.Action("editTheme", "UniversityAdmin", new { id = item.id_theme })"><i class="glyphicon glyphicon-edit"></i></a>

                                    }
                                    else
                                    {
                                        <p>No Action</p>
                                    }
                                </td>
                            </tr>
                           
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

