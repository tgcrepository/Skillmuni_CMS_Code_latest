

@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
}
<script>
    $(function () {
        $("#form_edit_category").validationEngine();


    });

    function select_file() {
        var file = $("#uploadBtn")[0].files[0];
        var filename = "";
        if (file) {
            filename = file.name;
        }
        $("#ImageFile").val(filename);
    }
</script>
<div id="pagecontent_dashboard" class="container">
    <div class="panel panel-default ">
        <div class="panel-heading">
            <h4 class="panel-title">Edit Category</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("edit_cms_category", "cms_category", FormMethod.Post, new { id = "form_edit_category", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <input type="hidden" name="ID_Category" id="ID_Category" value="@Model.ID_CATEGORY"/>
                <div class="form-horizontal">

                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="FirstName" class="control-label col-md-2 regLabel">Category Name :</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control validate[required]" value="@Model.CATEGORYNAME" placeholder="Category Name" id="Category" name="Category" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="FirstName" class="control-label col-md-2 regLabel">Description:</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control validate[required]" value="@Model.DESCRIPTION" placeholder="Description" id="Description" name="Description" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="FirstName" class="control-label col-md-2 regLabel">Image:</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control validate[required]" readonly value="@Model.IMAGE_PATH" placeholder="Choose Image" id="ImageFile" name="ImageFile" />
                                    <div class="fileUpload btn btn-primary">
                                        <span>Browse Image</span>
                                        <input id="uploadBtn" name="uploadBtn" class="upload" type="file" accept="image/*" onchange="select_file()" />

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Update" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



