@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";

}
<div class="row clearfix">
    <div class="col-md-12 column">
        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">Add Industry</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("createIndustry", "contentDashboard", FormMethod.Post, new { id = "form-add-industry" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-2">
                                <label class="control-label">Industry Name</label>
                            </div>
                            <div class="col-md-10">
                                <input type="text" class="form-control validate[required]" value="" placeholder="" id="industry-name" name="industry-name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                <label class="control-label">Description</label>
                            </div>

                            <div class="col-md-10">
                                <input type="text" class="form-control validate[required]" value="" placeholder="" id="industry-desc" name="industry-desc" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>