
@{
    ViewBag.Title = "jObRoleView";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    List<tbl_ce_evaluation_jobindustry> role = (List<tbl_ce_evaluation_jobindustry>)ViewData["role"];
}


<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });
</script>
<div class="content">
    <div class="col-md-12 column">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h6 class="panel-title">Industry View</h6>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-primary btn-default pull-right" href="@Url.Action("add_industry_job", "industryjob")"> Add Industry  </a>
                        <br /><hr />
                        <table id="report-table" class="table table-striped  table-bordered dataTable sm " width="100%" border="0" cellspacing="0" cellpadding="0">
                            <thead>
                                <tr>
                                    <th>
                                        Industry
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Industry Code
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in role)
                                {
                                    <tr>
                                        <td>
                                            @item.ce_job_industry
                                        </td>
                                        <td>
                                            @item.description
                                        </td>
                                        <td>
                                            @item.ce_industry_code
                                        </td>

                                        <td>
                                            <a href="@Url.Action("industryDetail", "industryjob", new { cij = item.ce_industry_code })" target="_blank">
                                                <i class="glyphicon glyphicon-list-alt"></i>
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>

                        </table>


                    </div>   </div>
            </div>
        </div>
    </div>
</div>




